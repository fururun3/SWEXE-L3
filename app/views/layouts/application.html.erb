<!DOCTYPE html>
<html>
  <head>
    <title>Book Search App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <div id="container">
      <div id="header">
        <%= render "header" %>
      </div>

      <div id="sidebar">
        <%= render "sidebar" %>
      </div>

      <div id="content">
        <% if flash[:notice] %>
          <p class="notice"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:alert] %>
          <p class="alert"><%= flash[:alert] %></p>
        <% end %>

        <%= yield %>
      </div>

      <div id="footer">
        <%= render "footer" %>
      </div>
    </div>
  </body>
</html>
